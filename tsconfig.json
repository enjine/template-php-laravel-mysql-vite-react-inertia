{
    "compilerOptions": {
        "target": "ES2020",
        "jsx": "react-jsx",
        "module": "ES2020",
        "moduleResolution": "node",
        "types": ["vite/client", "./resources"],
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.js",
        "resources/js/**/*.tsx",
        "resources/js/**/*.jsx",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.css",
        "resources/css/**/*.css",
        "resources/js/bootstrap.js"
    ],
    "exclude": ["node_modules", "public"],
    "extends": "./tsconfig.paths.json"
}
